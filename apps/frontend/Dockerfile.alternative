# Utiliser l'image Node.js officielle
FROM node:18-alpine AS builder

# Définir le répertoire de travail
WORKDIR /app

# Installer pnpm
RUN npm install -g pnpm

# Copier les fichiers de configuration workspace
COPY pnpm-workspace.yaml ./
COPY package.json ./

# Copier les packages dans l'ordre
COPY packages/shared ./packages/shared
COPY packages/ui ./packages/ui
COPY apps/frontend ./apps/frontend

# Installer les dépendances globalement
RUN pnpm install

# Construire les packages dans l'ordre
WORKDIR /app/packages/shared
RUN pnpm run build

WORKDIR /app/packages/ui
RUN pnpm run build

# Construire l'application frontend
WORKDIR /app/apps/frontend
RUN pnpm run build

# Stage de production
FROM node:18-alpine AS runner

WORKDIR /app

# Installer pnpm
RUN npm install -g pnpm

# Copier les fichiers de production
COPY --from=builder /app/apps/frontend/dist ./dist
COPY --from=builder /app/apps/frontend/package*.json ./

# Installer uniquement les dépendances de production
RUN pnpm install --prod

# Exposer le port
EXPOSE 3000

# Variable d'environnement
ENV NODE_ENV=production
ENV HOST=0.0.0.0
ENV PORT=3000

# Commande de démarrage
CMD ["pnpm", "preview", "--host", "0.0.0.0", "--port", "3000"]
